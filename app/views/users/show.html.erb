<div class="container">
  <div class="row">

    <div class="col-md-4">
      <%= image_tag @user.avatar, class: "img-responsive center-block" %>
    </div>

    <div class="col-md-8">
      <h1><%= @user.name %></h1>
      <p><%= @user.email %></p>
      <p>上站次數：<%= @user.sign_in_count %></p>
      <p>上次上線：<%= time_ago_in_words(@user.last_sign_in_at) %></p>
      <br>
      <%= simple_format @user.intro %>
      <% if @user == current_user %>
        <%= link_to 'Edit', edit_user_path, class: "btn btn-primary" %>
      <% end %>
    </div>

    <div class="clearfix"></div>
    <hr>

    <div class="panel panel-default">
      <div class="panel-heading"><h3>
        <%= @user.name %> has commented <%= @commented_restaurants.size %> restaurants
      </h3></div>
      <div class="panel-body">
        <% @commented_restaurants.each do |restaurant| %>
          <%= link_to restaurant_path(restaurant) do %>
            <div class="my-restaurant">
              <div>
                <%= image_tag restaurant.image, class: "img-responsive img-rounded" %>
              </div>
              <h4><%= restaurant.name %></h4>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

  </div>
</div>
