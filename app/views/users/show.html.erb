<div class="container">
  <div class="row">

    <div class="col-md-4">
      <%= image_tag @user.avatar, class: "img-responsive center-block" %>
    </div>

    <div class="col-md-8">
      <h1><%= @user.name %></h1>
      <p><%= @user.email %></p>
      <p>上站次數：<%= @user.sign_in_count %></p>
      <ul class="list-unstyled list-inline">
        <li><strong><%= @followings.size %></strong> following</li>
        <li><strong><%= @followers.size %></strong> followers</li>
        <li><strong><%= @favorited_restaurants.size %></strong> favorite restaurants</li>
        <li><strong><%= @commented_restaurants.size %></strong> commented restaurants</li>
      </ul>
      <%= render partial: "shared/follow", locals: {user: @user} %>
      <br>
      <%= simple_format @user.intro %>
      <% if @user == current_user %>
        <%= link_to 'Edit', edit_user_path, class: "btn btn-primary" %>
      <% end %>
    </div>

    <div class="clearfix"></div>
    <hr>

    <div class="col-md-4">

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3><strong><%= @followings.size %></strong> following</h3>
        </div>
        <ul class="list-group">
          <% @followings.each do |following| %>
            <li class="list-group-item">
              <%= link_to user_path(following) do %>
                <%= image_tag following.avatar, height: 30, width: 30, class: "img-circle" %>
                <%= following.name %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3><strong><%= @followers.size %></strong> followers</h3>
        </div>
        <ul class="list-group">
          <% @followers.each do |follower| %>
            <li class="list-group-item">
              <%= link_to user_path(follower) do %>
                <%= image_tag follower.avatar, height: 30, width: 30, class: "img-circle" %>
                <%= follower.name %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

    </div>

    <div class="col-md-8">

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3><%= @favorited_restaurants.size %> favorite restaurants</h3>
        </div>
        <div class="panel-body">
          <% @favorited_restaurants.each do |restaurant| %>
            <%= link_to restaurant_path(restaurant) do %>
              <div class="my-restaurant">
                <div>
                  <%= image_tag restaurant.image, class: "img-responsive img-rounded" %>
                </div>
                <h4><%= restaurant.name %></h4>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3><%= @commented_restaurants.size %> commented restaurants</h3>
        </div>
        <div class="panel-body">
          <% @commented_restaurants.each do |restaurant| %>
            <%= link_to restaurant_path(restaurant) do %>
              <div class="my-restaurant">
                <div>
                  <%= image_tag restaurant.image, class: "img-responsive img-rounded" %>
                </div>
                <h4><%= restaurant.name %></h4>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

    </div>

  </div>
</div>
